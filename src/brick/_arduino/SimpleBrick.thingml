import "Display_Arduino.thingml"
import "../SimpleBrick.thingml"
import "../Display.thingml"
import "../Controller.thingml"

protocol Timer;

configuration SimpleBrickArduino 
{
	instance bb : SimpleBrick
	instance disp : ArduinoDisplay
	instance ctrl : BasicIAController
	
	connector bb.clock over Timer
	//connector ctrl.clock over Timer
	
	connector bb.display => disp.display
	connector bb.controller => ctrl.controls
	connector ctrl.game => bb.ia 
}