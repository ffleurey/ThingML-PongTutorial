import "DisplayPosix.thingml"
import "../BreakoutGame.thingml"

protocol Timer;

configuration BreakoutPosix 
@add_c_libraries "SDL2"
//@debug "true"
//@debug_messages "*"
{
	instance game : BreakoutGame
	instance disp : DisplayPosix 
	
	connector game.clock over Timer
	
	connector game.display => disp.display
	connector game.controller => disp.controls
	
	instance ctrl : BasicIAController
	connector game.controller => ctrl.controls
	connector ctrl.game => game.ia 
}
 